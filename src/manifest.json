{
  "name": "Optus Screens 2",
  "description": "Launch any URL as a full-screen kiosk.",
  "manifest_version": 2,
  "version": "5.10.2",
  "author": {
    "name": "Optus",
    "email": ""
  },
  "kiosk_enabled": true,
  "offline_enabled": true,
  "icons": {
    "16": "img/icon_16.png",
    "128": "img/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["www/js/jquery.min.js","js/lib/wsc-chrome.js","js/admin.js","js/main.js"],
      "persistent": false
    },
	"remote_url":"https://screens.optus.com.au",
	"username":"admin",
	"password":"admin"
  },
  "sockets":{
    "tcpServer": {
      "listen": "*"
    }
  },
  "permissions": [
    "<all_urls>",
    "system.display",
    "system.network",
    "power",
    "webview",
    "alwaysOnTopWindows",
    "storage",
    "app.window.fullscreen",
    "app.window.fullscreen.overrideEsc",
    "enterprise.deviceAttributes",
    {"fileSystem": ["directory","retainEntries"]}
  ],
  "optional_permissions": [ "audioCapture", "videoCapture" ]

}
